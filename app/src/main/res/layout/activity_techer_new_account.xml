<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".StudentNewAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcornerteal200"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/nameTNAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/surnameTNAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/gradient_box"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rbMaleTNAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/rbFemaleTNAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emailTNAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Number"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/employeeNumberTNAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passwordTNAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:ems="10"
            android:hint="*************"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/confirmPasswordTNAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:ems="10"
            android:hint="*************"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In order to start using the App, please first agree to our TERMS and CONDITION"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/agreeChkBxTNAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFEAE1E1"
            android:checked="false"
            android:text="I agree to Appâ€™s Terms and Condition." />

        <Button
            android:id="@+id/submitBtnTNAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            app:backgroundTint="@color/teal_700" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>