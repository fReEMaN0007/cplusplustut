<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_200"
    android:foregroundGravity="center"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    app:layout_anchorGravity="center">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="22.5dp"
        android:paddingRight="52dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundcornerteal700">


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="3.3dp"
                android:layout_marginTop="3.2dp"
                android:layout_marginBottom="3.2dp"
                android:background="@drawable/roundcornerwhite"
                android:visibility="visible" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:text="Complete Lesson 1"
            android:textColor="#000000"
            android:textSize="24sp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle"
        android:foregroundGravity="right"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="10"
                android:textColor="#FFC107"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Points"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </FrameLayout>



















</com.google.android.material.circularreveal.CircularRevealFrameLayout>