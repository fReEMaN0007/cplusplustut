<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDashBoard">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECECEC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivDisplayPictureTeacherDashboard"
                            android:layout_width="146dp"
                            android:layout_height="145dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:contentDescription="TODO"
                            app:srcCompat="@drawable/ic_launcher_foreground"
                            tools:ignore="VectorDrawableCompat"
                            tools:srcCompat="@tools:sample/avatars" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="4"
                            android:foregroundGravity="bottom"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Welcome!"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvNameStudentDashboard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Juan"
                                android:textColor="@color/black"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/tvSurnameStudentDashboard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dela Cruz"
                                android:textColor="@color/black"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tvCourseStudentDashboard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-5dp"
                                android:layout_weight="1"
                                android:text="ComSci"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvStudentNUmberStudentDashboard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="123"
                                    android:textAlignment="center"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.25"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/tvStudentNUmberStudentDashboard2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:text="123456"
                                    android:textAlignment="center"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.25"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/tvStudentNUmberStudentDashboard3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="123"
                                    android:textAlignment="center"
                                    android:textSize="24sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="108dp"
                                    android:layout_height="29dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="108dp"
                                    android:layout_height="29dp"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="108dp"
                                    android:layout_height="29dp"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="108dp"
                                    android:layout_height="29dp"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="108dp"
                                    android:layout_height="29dp"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star_big_on"
                                    tools:srcCompat="@tools:sample/avatars" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvScoreStudentDashBoard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1 Star 0% to Lvl Up"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/leaderBoardBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Leader Board"
                            app:backgroundTint="@color/teal_700" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvOverAllProgressStudentDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="% Over-all Progress"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnSyncDataOnlineStudentDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sync Data Online"
                        app:backgroundTint="@color/teal_700" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnAchievementsStudentDashboard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:text="Achievements"
                            app:backgroundTint="@color/teal_700" />

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:text="Activities"
                            android:textSize="14sp"
                            app:backgroundTint="@color/teal_700" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:text="Skill Challenge"
                            android:visibility="gone"
                            app:backgroundTint="@color/teal_700" />

                        <Button
                            android:id="@+id/button12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:text="Sample Codes"
                            android:visibility="gone"
                            app:backgroundTint="@color/teal_700" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/roundcornerteal200"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <LinearLayout
                            android:id="@+id/linearPrelim"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvProgressPrelimStudentDashBoard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/linearPrelimInner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="invisible">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:tint="#EF2E2E"
                                    app:srcCompat="@android:drawable/ic_lock_idle_lock" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="LOCKED"
                                    android:textColor="#E85353" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearPrelimInnerRight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/PrelimStar5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/PrelimStar4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/PrelimStar3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/PrelimStar2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/PrelimStar1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/SearchByClass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PRELIM"
                            android:textColor="@color/white"
                            android:textSize="44sp"
                            app:backgroundTint="@color/teal_700"
                            app:cornerRadius="10dp" />

                        <LinearLayout
                            android:id="@+id/linearMidterm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvProgressMidtermStudentDashBoard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:id="@+id/linearMidtermInner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@android:drawable/ic_lock_idle_lock"
                                    app:tint="#EF2E2E" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="LOCKED"
                                    android:textColor="#E85353" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearMidtermInnerRight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:visibility="invisible">

                                <ImageView
                                    android:id="@+id/MidtermStar5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/MidtermStar4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/MidtermStar3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/MidtermStar2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/MidtermStar1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnMidtermStudentDashboard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="MIDTERM"
                            android:textColor="@color/grey"
                            android:textSize="44sp"
                            app:backgroundTint="#629E98"
                            app:cornerRadius="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvProgressPreFinalStudentDashBoard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:id="@+id/linearPrefinalInner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@android:drawable/ic_lock_idle_lock"
                                    app:tint="#EF2E2E" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="LOCKED"
                                    android:textColor="#E85353" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearPrefinalInnerRight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/PreFinalStar5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/PreFinalStar4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/PreFinalStar3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/PreFinalStar2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/PreFinalStar1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnPrefinalStudentDashboard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="PREFINAL"
                            android:textColor="@color/grey"
                            android:textSize="44sp"
                            app:backgroundTint="#629E98"
                            app:cornerRadius="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvProgressFinalStudentDashBoard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:id="@+id/linearFinalsInner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@android:drawable/ic_lock_idle_lock"
                                    app:tint="#EF2E2E" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="LOCKED"
                                    android:textColor="#E85353" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearFinalsInnerRight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/FinalStar5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/FinalStar4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/FinalStar3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/FinalStar2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <ImageView
                                    android:id="@+id/FinalStar1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    app:srcCompat="@android:drawable/btn_star" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnFinalsStudentDashboard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="FINALS"
                            android:textColor="@color/grey"
                            android:textSize="44sp"
                            app:backgroundTint="#629E98"
                            app:cornerRadius="10dp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_alignStart="@+id/textview"
            android:layout_alignLeft="@+id/textview"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:progressDrawable="@drawable/loading"
            android:visibility="invisible" />

    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>